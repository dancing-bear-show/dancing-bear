#!/usr/bin/env bash
set -euo pipefail

if [[ -x ".venv/bin/python" ]]; then
  PY=".venv/bin/python"
else
  PY="python3"
fi

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
REPO_ROOT="$SCRIPT_DIR/.."
if [[ -f "$REPO_ROOT/resume_assistant/__init__.py" ]]; then
  export PYTHONPATH="$REPO_ROOT:${PYTHONPATH:-}"
fi

exec "$PY" -m resume_assistant.llm_cli "$@"
