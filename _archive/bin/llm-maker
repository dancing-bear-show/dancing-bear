#!/usr/bin/env bash
set -euo pipefail

# Prefer venv python if present
if [[ -x ".venv/bin/python" ]]; then
  PY=".venv/bin/python"
else
  PY="python3"
fi

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
REPO_ROOT="$SCRIPT_DIR/.."
if [[ -d "$REPO_ROOT/maker" ]]; then
  export PYTHONPATH="$REPO_ROOT:${PYTHONPATH:-}"
fi

exec "$PY" -m maker.llm_cli "$@"
