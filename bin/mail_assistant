#!/usr/bin/env python3
"""Thin wrapper to run the Mail Assistant CLI.

Ensures the repository root is on sys.path so the package resolves when
invoked as a script (python path/to/bin/mail_assistant).
"""
from pathlib import Path
import sys

REPO_ROOT = Path(__file__).resolve().parents[1]
if str(REPO_ROOT) not in sys.path:
    sys.path.insert(0, str(REPO_ROOT))

from mail_assistant.__main__ import main  # noqa: E402

if __name__ == "__main__":
    raise SystemExit(main())
